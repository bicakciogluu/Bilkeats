<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_signup.LoginPage"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:ignore="ExtraText">

    >

    <View
        android:id="@+id/redRect"
        android:layout_width="443dp"
        android:layout_height="90dp"
        android:background="#D12C2B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/emailText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bilkeatslogo" />

    <EditText
        android:id="@+id/emailText"
        android:layout_width="393dp"
        android:layout_height="51dp"
        android:drawableRight="@drawable/baseline_email_24"
        android:hint="E-mail address"
        android:onClick="usernameEdit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.295" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="393dp"
        android:layout_height="51dp"
        android:drawableRight="@drawable/baseline_lock_24"
        android:hint="Password"
        android:onClick="passwordEdit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.422" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="274dp"
        android:layout_height="48dp"
        android:layout_marginBottom="150dp"
        android:backgroundTint="#194C91"


        android:onClick="loginButtonClicked"

        android:text="LOG IN"
        android:textColor="#F9F9F9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordText"
        app:layout_constraintVertical_bias="0.451" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="232dp"
        android:layout_height="48dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:onClick="forgotPasswordClicked"
        android:text="Forgot password"
        android:textColor="#1B38DD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.767">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>