<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_signup.Preferences">

    <Switch
        android:id="@+id/lactose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="111dp"
        android:layout_marginBottom="27dp"
        android:checked="false"
        android:onClick="lactose"
        android:text="lactose"
        app:layout_constraintBottom_toTopOf="@+id/veganSwitch"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/nutAllergy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:onClick="nut,Allergy"
        android:text="Nut Allergy"
        app:layout_constraintEnd_toEndOf="@+id/veganSwitch"
        app:layout_constraintStart_toEndOf="@+id/veganSwitch"
        app:layout_constraintTop_toBottomOf="@+id/veganSwitch" />

    <Switch
        android:id="@+id/veganSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="126dp"
        android:onClick="vegan"
        android:text="vegan"
        app:layout_constraintEnd_toStartOf="@+id/lactose"
        app:layout_constraintStart_toStartOf="@+id/lactose"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="98dp"
        android:onClick="ok"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nutAllergy" />
</androidx.constraintlayout.widget.ConstraintLayout>